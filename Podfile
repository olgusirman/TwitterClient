  pod 'ObjectMapper'
  pod 'Swinject'
  pod 'SwinjectAutoregistration'
  pod 'SwinjectStoryboard'
  pod 'RxSwift'
  pod 'RxCocoa'
  
  target 'VNGRSTwitterClientTests' do
    inherit! :search_paths
    # Pods for testing
    pod 'Swinject'
    pod 'SwinjectAutoregistration'
    #pod 'SwinjectStoryboard', '1.1.2'
    
  end

  target 'VNGRSTwitterClientUITests' do
    inherit! :search_paths
    # Pods for testing
    
  end

